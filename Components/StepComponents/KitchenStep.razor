@using TcTeardrops.Configurator.Models
@using TcTeardrops.Configurator.Services
@inject StateService State

<div class="step-container">
    <h3>Kitchen Galley</h3>
    <p class="step-description">Cook up a storm anywhere.</p>

    @foreach (var group in State.AvailableOptions.Where(o => o.Category == "Kitchen").GroupBy(o => string.IsNullOrEmpty(o.Group) ? "General" : o.Group))
    {
        <div class="category-section">
            <h4 class="category-header">@group.Key</h4>
            <div class="options-grid">
                @foreach (var option in group)
                {
                    <div class="option-card @(State.CurrentQuote.HasOption(option.Id) ? "selected" : "")" @onclick="() => State.ToggleOption(option)">
                        <div class="option-image-placeholder">
                            @if (!string.IsNullOrEmpty(option.ImageUrl))
                            {
                                <img src="@option.ImageUrl" alt="@option.Name" style="width: 100%; height: 100%; object-fit: cover;" />
                            }
                            else
                            {
                                <span>IMG</span>
                            }
                        </div>
                        <div class="option-details">
                            <h4>@option.Name</h4>
                            <p>@option.Description</p>
                            <span class="price">@option.Price.ToString("C")</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    protected override void OnInitialized()
    {
        State.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        State.OnChange -= StateHasChanged;
    }
}
